<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonNewRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_new_ride" />

    <Button
        android:id="@+id/buttonCompanions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_companions" />

    <Button
        android:id="@+id/buttonTaxiStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_statistics" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings" />

</LinearLayout>
